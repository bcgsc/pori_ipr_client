.md-toolbar-tools
  md-icon(ng-click="toggleSidebar()", ng-if="!maximized").clickable.margin-right-15 menu
  md-icon(ng-click="toggleSidebar()", ng-if="maximized").clickable.margin-right-15 close
  h2 
    img(src="/assets/images/bcca_logo.png", style="margin-bottom: -5px;")
    |  BCGSC Integrated Pipeline Reports 
    span.version-number v{{version}} &nbsp
    span(ng-if="CONFIG.ATTRS.name !== 'PRODUCTION'") [{{CONFIG.ATTRS.name}} ENVIRONMENT]
  span(flex)
  
  md-menu
    div(ng-click='$mdMenu.open()', aria-label='User')
      md-icon person
      md-button.white {{user.firstName}} {{user.lastName}}
    
    md-menu-content(width="4")
      md-menu-item
        md-button(ng-click="userDiag($event, user)") Edit Profile

      md-menu-item
        md-button(ng-click="openFeedback($event)") Feedback
      md-menu-divider
      md-menu-item(ng-click="userLogout()")
        md-button Logout
