ol.breadcrumb
    li
        a(ui-sref="dashboard.listing") Dashboard
    li(ng-repeat="crumb in breadcrumbs" ng-class="{ active: $last }")
        | / &nbsp;
        a(ui-sref="{{ crumb.route }}" ng-if="!$last")
            | {{ crumb.displayName }}&nbsp;
        span(ng-show="$last") {{ crumb.displayName }}