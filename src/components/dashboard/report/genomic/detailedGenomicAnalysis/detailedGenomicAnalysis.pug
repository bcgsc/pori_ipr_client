section
    md-subheader.md-primary Detailed Genomic Analysis

    div(layout="column", flex)

        div(layout="column", flex)

            h2.title Therapries Approved in this Tumour Type

            div(ng-if="approvedThisCancer.length == 0")
                div.text-center.details None Found.
            ipr-genomic-alteration(ng-repeat="gene in approvedThisCancer", samples="samples", gene="gene").container

            h2.title Therapries Approved in other tumour types
            div(ng-if="approvedOtherCancer.length == 0")
                div.text-center.details None Found.
            ipr-genomic-alteration(ng-repeat="gene in approvedOtherCancer", samples="samples", gene="gene").container


            h2.title Alterations With Therapeutic Relevance

        div(ng-repeat="(alteration, genes) in alterations")
            h3.title {{alteration}}

            div(ng-if="genes.length == 0 && alteration !== 'unknown'")
                div.text-center.details None Found.
            div(ng-if="alteration == 'unknown'")
                div.text-center.details
                    md-button.md-primary.md-raised.md-hue-1 View Uncharacterized Alterations
            ipr-genomic-alteration(ng-repeat="gene in genes", samples="samples", gene="gene").container

        div(layout="column", flex)
            h2.title Targeted Gene Report - Detected Alterations
            h3.title The following alterations were detected by the Targeted Gene Report rapid analysis pipline.

            div(layout="column", flex, ng-repeat="gene in targetedGenes").details.box
                div(layout="row", flex)
                    dt(flex="15") Gene:
                    dd(flex="15") {{gene.gene}}

                    dt(flex="15") Variant:
                    dd(flex="15") {{gene.variant}}

                    dt(flex="15") Source:
                    dd(flex="45") {{gene.sample}}