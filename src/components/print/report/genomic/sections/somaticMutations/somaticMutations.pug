        tr
            td.somaticMutations
                h2 Small Mutations: Genomic Details
                h3 Variants of Potential Clinical Relevance
        tr
            td.somaticMutations
                div(ng-if="smallMutations.clinical.length == 0").detailedDataAbsent No somatic small mutations of clinical relevance were found from the analysis.

                table(ng-if="smallMutations.clinical.length > 0").detailedData
                    tr.header
                        th Gene
                        th Transcript
                        th Protein Change
                        th Location
                        th Zygosity
                        th Ref/Alt
                        th Copy Change
                        th LOH State
                        th Ref/Alt DNA
                        th Ref/Alt RNA
                        th Expression (RPKM)
                        th Fold Change vs. {{report.tumourAnalysis.normalExpressionComparator}}
                        th {{report.tumourAnalysis.diseaseExpressionComparator}} %ile
                    tr(ng-repeat="mutation in smallMutations.clinical")
                        td(style="width: 7%") {{mutation.gene}}
                        td(style="width: 15%") {{mutation.transcript}}
                        td(style="width: 6%") {{mutation.proteinChange}}
                        td(style="width: 10%") {{mutation.location}}
                        td(style="width: 6%") {{mutation.zygosity}}
                        td(style="width: 8%") {{mutation.refAlt}}
                        td(style="width: 7%") {{copyFilter(mutation.ploidyCorrCpChange)}}
                        td(style="width: 7%") {{mutation.lohState}}
                        td(style="width: 7%") {{mutation.tumourReads}}
                        td(style="width: 7%") {{mutation.RNAReads}}
                        td(style="width: 7%") {{mutation.expressionRpkm}}
