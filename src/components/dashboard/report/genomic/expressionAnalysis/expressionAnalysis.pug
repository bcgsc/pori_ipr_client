section
    md-subheader.md-primary Expression Analysis

    div(layout="column", flex)

        div(layout="column", flex).bg-white

            h2.title Expression Analysis
            h3.title Spearman Correlation with Available Expression Datasets

            div(layout="row", layout-align="center center").md-padding
                span(flex=20)
                span(flex, layout="row", layout-align="start start")
                    img(data-ng-src="data:image/png;base64,{{images['expression.chart'].data}}")
                    div(layout="column")
                        div(flex, layout-align="center start")
                            img(data-ng-src="data:image/png;base64,{{images['expression.legend'].data}}")
                        div(layout="row").expressionDetails
                            div(flex).normal
                                | Normal Tissue Expression Comparator
                                span(style="background-color: #{{colourHex(pog.tumourAnalysis.tcgaColor)}}") {{pog.tumourAnalysis.normalExpressionComparator}}
                            div(flex).disease
                                | Disease Expression Comparator
                                span(style="background-color: #{{colourHex(pog.tumourAnalysis.tcgaColor)}}") {{pog.tumourAnalysis.diseaseExpressionComparator}}
                        span.details Tissue Comparator Details
                span(flex=20)

        div(layout="column", flex)
            h2.title Small Mutations: Genomic Details

            div(ng-repeat="(title, outliers) in expOutliers")
                h3.title {{titleMap[title]}}

                ipr-outlier(outliers="outliers", pog="pog")


            h2.title Drug Targetable High Percentile Genes

            div(flex, layout="column")


                div(layout="column", flex).dataBox

                    div(flex).filter.md-padding
                        md-input-container(md-whiteframe=1, flex).hide-validation-error.bg-white
                            input(placeholder="Search", name="Search", ng-model="drugQuery", size=60)

                    div.box
                        div(layout="row", flex).heading
                            div(flex) Gene
                            div(flex) LOH
                            div(flex) Copy Number
                            div(flex) Fold Change Vs. {{pog.tumourAnalysis.normalExpressionComparator}}
                            div(flex) {{pog.tumourAnalysis.diseaseExpressionComparator}} %ile
                            div(flex) kIQR
                        div(ng-if="outliers.length == 0")
                            div.text-center.details No small somatic mutations of this kind were found from the analysis.

                        div(layout="row", flex, ng-repeat="target in drugTargetList = (drugTargets | filter: searchDrugs(drugQuery))").row
                            div(flex)
                                a(href="http://dgidb.genome.wustl.edu/genes/{{target.gene}}", target="_blank") {{target.gene}}
                            div(flex) {{target.lohRegion}}
                            div(flex) {{target.copy}}
                            div(flex) {{target.foldChange}}
                            div(flex) {{target.tcgaPerc}}
                            div(flex) {{target.kIQR}}

        div(flex, layout="column").bg-white
            h2.title Expression Distributions

            div(flex, layout="row", ng-repeat="row in densityGraphs", layout-align="space-around start").margin-top-20
                div
                    img(data-ng-src="data:image/png;base64,{{row[0].data}}")
                div
                    img(data-ng-src="data:image/png;base64,{{row[1].data}}")