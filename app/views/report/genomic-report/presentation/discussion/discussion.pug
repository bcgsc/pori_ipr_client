section.material-section.discussion.presentation
  md-subheader.md-no-sticky Tumour Board Discussion Notes

  div(layout="column")
    div.analysis-report-section
      div(layout="column")

        discussion-entry(report="$ctrl.report", entry="discussion", user="$ctrl.user", ng-repeat="discussion in $ctrl.discussions").discussion

        div.add-discussion
          form(name="DiscussionEntry", ng-submit="$ctrl.add(DiscussionEntry)")
            div(layout="column")
              md-input-container(flex)
                label Comment/Reply
                textarea(ng-model="$ctrl.new.body", rows="4", flex)
              div(layout="row")
                span(flex)
                md-button(type="submit").md-accent.md-raised Add
