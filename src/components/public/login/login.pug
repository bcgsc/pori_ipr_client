md-content(layout="column", flex)
  form(ng-submit="login(form)", novalidate, name="form")
    div(layout="column")
      h3 Log In
      div(layout)
        md-input-container.md-icon-float(flex)
          label Username
          input(ng-model="user.username", name="username", type="text", placeholder="Username", autofocus, required)
          div(ng-messages="form.username.$error")
            div(ng-message="required") Please enter your username
            div(ng-message="badCredentials") The supplied credentials failed to find a match in our records
      
      div(layout)
        md-input-container.md-icon-float(flex)
          label Password
          input(ng-model="user.password", name="password", type="password", placeholder="Password", required)
          div(ng-messages="form.password.$error")
            div(ng-message="required") Please enter your password
            
      div.error(flex, layout=row, layout-align="center center")
        p(ng-if="errors.credentials") Invalid Username or Password
        p(ng-if="errors.system") Something went wrong, please try again.
      
      div(layout)
        button.md-button.md-primary.md-raised(flex, type="submit") Login
        
      div(layout="row")
        div(layout="column", flex=100)
        div(layout="column").text-right.margin-top-10
          md-button(href="http://www.bcgsc.ca/mail_password_form").margin-bottom-10.md-button.small.link Reset Password
      div(layout="row")
        div(layout="column", flex=100)
        div(layout="column").text-right
          md-button(ng-click='requestAccount()').md-button.small.link Request New Account