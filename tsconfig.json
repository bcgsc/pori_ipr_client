{
  "compilerOptions": {
    "sourceMap": true,
    "module": "ESNext",
    "target": "ES2020",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "app/*"
      ]
    },
    "lib": ["ES2020","DOM"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "app/**/*.js",
    "app/**/*.jsx",
    "app/**/*.test.ts",
    "app/**/*.test.tsx",
    "app/**/*.test.js",
    "app/**/*.test.jsx",
    "app/custom.d.ts"
  ],
  "compileOnSave": false,
  "allowJs": true,
  "strict": true,
}
