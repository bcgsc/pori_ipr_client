{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["app/*"]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "app/**/*.js",
    "app/**/*.jsx",
    "app/**/*.test.ts",
    "app/**/*.test.tsx",
    "app/**/*.test.js",
    "app/**/*.test.jsx"
  ],
  "compileOnSave": false,
  "allowJs": true
}