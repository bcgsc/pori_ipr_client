section.detailedGenomicAnalysis
  md-subheader.md-primary.md-no-sticky Detailed Genomic Analysis

  div(layout="column", flex)

    div(layout="column", flex)

      h2.title Therapies Approved in this Tumour Type

      div(ng-if="$ctrl.approvedThisCancer.length == 0")
        div.text-center.details None Found.
      genomic-alteration(ng-repeat="gene in $ctrl.approvedThisCancer track by $index", samples="$ctrl.samples", gene="gene", pog="$ctrl.pog", report="$ctrl.report").container

      h2.title Therapies Approved in other tumour types
      div(ng-if="$ctrl.approvedOtherCancer.length == 0")
        div.text-center.details None Found.
      genomic-alteration(ng-repeat="gene in $ctrl.approvedOtherCancer track by $index", samples="$ctrl.samples", gene="gene", pog="$ctrl.pog", report="$ctrl.report").container


      h2.title Alterations With Potential Clinical Relevance
        span(ng-click="$ctrl.createNewKBEntry()", ng-if="$ctrl.reportEdit").pull-right.addNewVariant.clickable Add new variant

    div(ng-repeat="(alteration, genes) in $ctrl.alterationsGrouped")
      h3(ng-if="alteration === 'unknown' || !$ctrl.showUnknown").title {{alteration}}

      div(ng-if="genes.length == 0 && alteration !== 'unknown'")
        div(ng-if="!$ctrl.showUnknown").text-center.details None Found.

      genomic-alteration(ng-repeat="(i, gene) in genes track by $index", samples="$ctrl.samples", gene="gene", pog="$ctrl.pog", report="$ctrl.report").container
